{
    "name": "argocd",
    "type": "http",
    "base_url": "http://argocd-server.example.com",
    "auth": {
        "type": "token",
        "token": "your-argocd-token"
    },
    "tools": [
        {
            "name": "argocd.get_applications",
            "description": "Get list of all ArgoCD applications",
            "endpoint": "/api/v1/applications",
            "method": "GET"
        },
        {
            "name": "argocd.sync_application",
            "description": "Sync an ArgoCD application",
            "endpoint": "/api/v1/applications/{app_name}/sync",
            "method": "POST"
        }
    ]
}
